<body class="news root">
	{include file="common/top.phtml"}
	<div id="content" class="full">
		<div class="full-top"></div>
		<div class="full-repeat">
			<div class="container">
				<div id="contentCol" class="block w10-16 lfloat">
						<ul class="ariane">
					   		<li class="first"><a href="{geturl}/{getlang}/" title="{#topmenu_home_t#|firststring}">{#topmenu_home_t#|firststring}</a></li>
							<li>></li>
							<li>{#topmenu_news_t#|firststring}</li>
						</ul>
						<h1>{#topmenu_news_t#|firststring}</h1>
						{widget_news_list 
						css_param=[
							'class_container'=>'ch1-2 ch-light',
							'class_name'=>'name',
							'class_elem'=>'child',
							'class_box'=>'box',
							'class_img'=>'rfloat img',
							'class_desc'=>'descr',
							'class_pagination'=>'clear pagination'
