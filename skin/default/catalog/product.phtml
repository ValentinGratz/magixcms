{include file="section/head.phtml" section="prepend"}
{headmeta meta="description" content={seo_rewrite config_param=['level'=>'3','idmetas'=>'2','default'=>$name_product] category=$category subcategory=$subcategory record=$name_product}}
    <title>{seo_rewrite config_param=['level'=>'3','idmetas'=>'1','default'=>$name_product] category=$name_cat subcategory=$name_subcat record=$name_product}</title>
{include file="section/css.phtml"}
</head>
<body id="product">
<div id="page" class="container">
{include file="section/header.phtml"}
    <div id="content" class="row">
    {include file="section/sidebar.phtml"}
        <div id="article" class="span9">
            <div id="article-inner" class="span8">
                <h1>{$name_product}</h1>
                <div id="product-info" class="span3 well pull-right">
                    {if $imgPath_product != null}
                        <img src="{$imgcatalog}" alt="{$name_product}" />
                    {else}
                        <img src="/skin/{template}/img/catalog/product-default.png" alt="{$name_product}" />
                    {/if}
                    <p>
                    {if $price_product != 0}
                        <span class="price">{$price_product} € TTC</span>
                    {/if}
                    </p>
                    <form action="{geturl}/{getlang}/magixmod/contact/" method="post">
                        <p class="lead">Intéressé par {$name_product} ?</p>
                        <p>
                            <input type="hidden" name="moreinfo" value="{$name_product}"/>
                            <input id="more-info" type="submit" class="btn btn-primary" value="{#contact_form#|firststring}" />
                        </p>
                    </form>
                </div>
                {$content_product}
                <div id="product-galery">
                    <p class="title">{#gallery#|firststring}</p>
                    {widget_catalog_microgalery
                        css_param=[
                            'class_container'=>'list-img',
                            'class_img'=>'img'
                        ]
                        col="5"
                    }
                 </div>
                {widget_catalog_display
                    structureHTML = [
                        'container' => [
                            'htmlBefore' => '<h2>Produits similaires</h2><ul class="thumbnails">',
                            'htmlAfter' => '</ul>'
                            ],
                        'item' => [
                            'htmlBefore' => '<li class="span8"><div class="thumbnail">',
                            'htmlAfter' => '</div></div></li>'
                            ],
                        'name' => [
                            'htmlBefore' => '<div class="caption"> <h3>',
                            'classLink' => 'name',
                            'htmlAfter' => '</h3>'
                            ],
                        'img' => [
                            'classLink' => 'none'
                            ],
                        'descr' => [
                            'htmlBefore' => '<p>',
                            'htmlAfter' => '</p>'
                            ],
                        'price' => [
                            'htmlBefore' => '<a class="btn" href="|#url#|" title="Voir le produit"> Voir le produit: ',
                            'htmlAfter' => '</a>'
                            ]
                    ]
                }
            </div>
        </div>
        <div class="clear">&nbsp;</div>
    </div>
{include file="section/footer.phtml"}
</div>
{include file="section/foot.phtml"}
</body>
</html>