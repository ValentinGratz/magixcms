{include file="common/header.phtml" section="prepend"}
{headmeta meta="description" content={seo_rewrite config_param=['level'=>'2','idmetas'=>'2','default'=>$slibelle] category=$clibelle subcategory=$slibelle}}
    <title>{seo_rewrite config_param=['level'=>'2','idmetas'=>'1','default'=>$slibelle] category=$clibelle subcategory=$slibelle}</title>
{include file="common/css.phtml"}
</head>
<body class="catalog subcat">
	<div id="header" class="full">
		<div class="container">
			{include file="common/top.phtml"}
		</div>
	</div>
	<div id="content" class="full">
		<div id="contentContener" class="container">
			<div class="bg-top w16-16"></div>
				<div class="bg-repeat w16-16">	
					<div id="contentCol" class="text-content block w11-16 lfloat">
						<ul class="ariane">
							<li><a href="{geturl}/{getlang}/{#topmenu_catalog_uri#}/" title="{#topmenu_catalog_t#}">{#topmenu_catalog_t#}</a></li>
							<li>></li>
							<li><a href="{$uri_cat}" title="{$clibelle}">{$clibelle}</a></li>
							<li>></li>
							<li>{$slibelle}</li>
						</ul>  	  	
						<h1>{$slibelle}</h1>
						{$s_content}
						{widget_catalog_load_products 
							css_param=[
								'class_container'=>'list-div border w11-64 bg medium',
								'class_elem'=>'list-div-elem',
								'class_img'=>'img'
							] tposition="bottom" description=true size=medium col="4"}
					</div>
					<div id="rightCol" class="block w5-16 lfloat last">
						{include file="common/colright.phtml"}
					</div>
				</div>
				<div class="bg-bottom w16-16"></div>
		</div>
	</div>
	{include file="common/footer.phtml"}
</body>
</html>