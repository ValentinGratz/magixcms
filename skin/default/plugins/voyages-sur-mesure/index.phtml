					<td style="width:150px;" class="errorInput"></td>
				</tr>
				<tr>
					<td class="status"></td>
				</tr>
				<tr>
					<td class="label"><label for="message" class="inlinelabel">Message :</label></td>
				</tr>
				<tr>
					<td><textarea id="message" name="message" style="background:white;" class="fulltext ui-widget-content ui-corner-all" rows="10" cols="40"></textarea></td>
					<td style="width:150px;" class="errorInput"></td>
				</tr>
				<tr>
					<td class="status"></td>
				</tr>
				<tr>
					<td><input type="submit" name="snom" class="fg-button ui-state-default ui-corner-all" value="envoyer" /></td>
				</tr>
			</table>
		</fieldset>
		</form>
	</div>
</div>
{include file="common/footer.phtml"}
