{include file="common/header.phtml" section="prepend"}
{headmeta meta="description" content="{cms_seo config_param=['seo'=>$seo_desc_page,'default'=>$title_page]}"}
    <title>{cms_seo config_param=['seo'=>$seo_title_page,'default'=>$title_page]}</title>
{include file="common/css.phtml"}
</head>
<body class="cms">
	<div id="header" class="full">
		<div class="container">
			{include file="common/top.phtml"}
		</div>
	</div>
	<div id="content" class="full">
		<div id="contentContener" class="container">
			<div class="bg-top w16-16"></div>
				<div class="bg-repeat w16-16">	
					<div id="contentCol" class="text-content block w11-16 lfloat">
						<ul class="ariane">
							{if $uri_page_p != null}
					   		<li class="first"><a href="{$uri_page_p}">{$title_page_p}</a></li>
					   		<li>></li>
					   		<li>{$title_page}</li>
					   		{else}
					   		<li class="first">{$title_page}</li>
					   		{/if}
					   	</ul>
						<div class="date rfloat">{$last_update|date_format:"%d-%m-%y"}</div>
						<h1>{$title_page}</h1>
						{$content_page}
					</div>
					<div id="rightCol" class="block w5-16 lfloat last">
						{include file="common/colright.phtml"}
					</div>
				</div>
				<div class="bg-bottom w16-16"></div>
		</div>
	</div>
	{include file="common/footer.phtml"}
</body>
</html>