{if #id_mainCat#}<section id="main-cat">	<div class="container">	    <div class="row">	    {widget_catalog_data	        conf = [	            'context' => 'category',	            'select' => [{getlang} => {#id_mainCat#}],				'deepness'=> 'none'	            ]	        assign="mainCat"	    }	    {if $mainCat}	        <div class="center-gallery">	        {include file="home/loop/category.tpl" data=$mainCat effect="ming"}	        </div>	    {/if}	    </div>	</div></section>{/if}