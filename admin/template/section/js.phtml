<script type="text/javascript">
    var editor_version = "{$smarty.const.VERSION_EDITOR}";
    var baseadmin = "{baseadmin}";
    var edit = "{$smarty.get.edit}";
    var getlang = "{$smarty.get.getlang}";
    $(function(){
        // Dialog
        $('#dialog').dialog({
            autoOpen: false,
            width: 600,
            buttons: {
                "Ok": function () {
                    $(this).dialog("close");
                },
                "Cancel": function () {
                    $(this).dialog("close");
                }
            }
        });
        // Dialog Link
        $('#dialog_link').click(function () {
            $('#dialog').dialog('open');
            return false;
        });
    });
</script>