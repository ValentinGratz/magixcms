<body class="module-dashboard">
{include file="section/top.phtml"}
<div class="container-fluid">
    <div class="row-fluid">
        {include file="section/colleft.phtml"}
        <div class="span9">
            <div class="row-fluid">
                <div class="span6">
                    <h2><span class="icon-certificate"></span> Analyse de l'installation</h2>
                    <div class="alert alert-info">
                        <span class="icon-info-sign"></span> Votre version de magix cms
                        <span id="version"></span>
                    </div>
                    <p>
                        Visitez la documentation de Magix CMS pour plus de renseignements
                    </p>
                    <ul class="inline">
                        <li>
                            <a class="btn" href="#">
                                <span class="icon-external-link"></span> Site Web
                            </a>
                        </li>
                        <li>
                            <a class="btn" href="#">
                                <span class="icon-info-sign"></span> Documentation
                            </a>
                        </li>
                        <li>
                            <a class="btn" href="#">
                                <span class="icon-wrench"></span> API
                            </a>
                        </li>
                        <li>
                            <a class="btn targetblank" href="https://github.com/gtraxx/magixcms">
                                <span class="icon-github"></span> Github
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="span6">
                    <h2><span class="icon-bolt"></span> Liens rapide</h2>
                    <div class="row-fluid">
                        <div class="span6">
                            <h3><span class="icon-file-alt"></span> Pages</h3>
                            <ul class="unstyled">
                                <li>
                                    <ul class="inline">
                                    {foreach $array_lang as $key => $value nocache}
                                        <li>
                                            <a href="/{baseadmin}/cms.php?getlang={$key}">
                                                <span class="icon-flag"></span> {$value|upper}
                                            </a>
                                        </li>
                                    {/foreach}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="span6">
                            <h3><span class="icon-home"></span> Page d'accueil</h3>
                            <ul class="unstyled">
                                <li>
                                    <a href="/{baseadmin}/home.php?action=list">
                                        <span class="icon-list-ul"></span> Liste
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <h3><span class="icon-shopping-cart"></span> Catalogue</h3>
                            <ul class="unstyled">
                                <li>
                                    <span class="icon-folder-open-alt"></span> Catégorie
                                    <ul class="inline">
                                    {foreach $array_lang as $key => $value nocache}
                                        <li>
                                            <a href="/{baseadmin}/catalog.php?section=category&amp;getlang={$key}">
                                                <span class="icon-flag"></span> {$value|upper}
                                            </a>
                                        </li>
                                    {/foreach}
                                    </ul>
                                </li>
                                <li>
                                    <span class="icon-shopping-cart"></span> Produits
                                    <ul class="inline">
                                    {foreach $array_lang as $key => $value nocache}
                                        <li>
                                            <a href="/{baseadmin}/catalog.php?section=product&amp;getlang={$key}">
                                                <span class="icon-flag"></span> {$value|upper}
                                            </a>
                                        </li>
                                    {/foreach}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="span6">
                            <h3><span class="icon-rss"></span> Actualités</h3>
                            <ul class="unstyled">
                                <li>
                                    <ul class="inline">
                                    {foreach $array_lang as $key => $value nocache}
                                        <li>
                                            <a href="/{baseadmin}/news.php?getlang={$key}">
                                                <span class="icon-flag"></span> {$value|upper}
                                            </a>
                                        </li>
                                    {/foreach}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <h2><span class="icon-bar-chart"></span> Statistiques des pages</h2>
                    <div id="graphPages"></div>
                </div>
                <div class="span6">
                    <h2>Heading</h2>
